doctype html
html(lang="en")
  head
    meta(charset="UTF-8")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    title Registro
    link(rel="stylesheet", href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css")
  body
    .container.mt-5
      .row.justify-content-center
        .col-md-6
          .card
            .card-header.text-center
              h2 Registro de Usuario
            .card-body
              form
                .form-group
                  label(for="userType") Tipo de Usuario
                  select#userType.form-control(name="userType", required)
                    option(value="paciente") Paciente
                    option(value="bioquimico") Bioquímico
                    option(value="administrador") Administrador
                .form-group
                  label(for="nombre") Nombre
                  input#nombre.form-control(type="text", name="nombre", required)
                .form-group
                  label(for="apellido") Apellido
                  input#apellido.form-control(type="text", name="apellido", required)
                .form-group
                  label(for="numeroIdentificacion") Número de Identificación (DNI)
                  input#numeroIdentificacion.form-control(type="text", name="numeroIdentificacion", required)
                .form-group
                  label(for="fechaNacimiento") Fecha de Nacimiento
                  input#fechaNacimiento.form-control(type="date", name="fechaNacimiento", required)
                .form-group
                  label(for="correoElectronico") Correo Electrónico
                  input#correoElectronico.form-control(type="email", name="correoElectronico", required)
                .form-group
                  label(for="password") Contraseña
                  input#password.form-control(type="password", name="password", required)
                  br
                .form-group.text-center
                  button.btn.btn-primary(type="submit") Registrarse
